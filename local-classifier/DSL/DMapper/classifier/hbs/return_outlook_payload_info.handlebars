{
  "subject": "{{{data.subject}}}",
  "categories": "{{{data.categories}}}",
  "body": "{{{jsEscape data.body.content}}}",
  "fromEmailAddress": "{{{data.from.emailAddress.address}}}",
  "attachments": [
    {{#each data.attachments}}
      "{{{this.name}}}"
    {{#unless @last}},{{/unless}}
    {{/each}}
  ],
  "toEmailAddress": [
    {{#each data.toRecipients}}
      "{{{this.emailAddress.address}}}"
    {{#unless @last}},{{/unless}}
    {{/each}}
  ]
}